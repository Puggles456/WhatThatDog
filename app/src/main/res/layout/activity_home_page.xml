<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homePage">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="186dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/silver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <ImageView
            android:id="@+id/GalleryPic"
            android:layout_width="97dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:background="@color/silver"
            android:src="@drawable/gallery"
            tools:ignore="ContentDescription"
            tools:srcCompat="@drawable/gallery" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="SEARCH GALLERY"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="186dp"
        android:layout_height="134dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/silver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <ImageView
            android:id="@+id/CameraPic"
            android:layout_width="97dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:src="@drawable/camera"
            tools:ignore="ContentDescription"
            tools:srcCompat="@drawable/camera" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="TAKE PICTURE"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="392dp"
        android:layout_height="68dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="10dp"

        android:background="@color/purple_700"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="303dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="DogBreed Image Processor"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/SettingsPic"
            android:layout_width="43dp"
            android:layout_height="39dp"
            android:layout_gravity="top|end"
            android:background="@color/purple_700"
            android:src="@drawable/settings"
            tools:ignore="ContentDescription"
            tools:srcCompat="@drawable/settings" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="186dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/silver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <ImageView
            android:id="@+id/UploadPic"
            android:layout_width="97dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:background="@color/silver"
            android:src="@drawable/upload"
            tools:ignore="ContentDescription"
            tools:srcCompat="@drawable/upload" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="UPLOAD PICTURE"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>